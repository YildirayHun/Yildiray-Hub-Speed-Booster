local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- AYARLAR --
local speedEnabled = false
local SPEED = 30
local infJumpEnabled = false
local jumpForce = 50

-- ESKÄ° UI TEMÄ°ZLEME --
pcall(function()
    if game.CoreGui:FindFirstChild("Yildiray_Premium_UI") then
        game.CoreGui.Yildiray_Premium_UI:Destroy()
    end
end)

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "Yildiray_Premium_UI"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

---------------------------------------------------------
-- SAÄž ALT PREMÄ°UM BÄ°LDÄ°RÄ°M SÄ°STEMÄ°
---------------------------------------------------------
local function showNotification()
    local NotifyFrame = Instance.new("Frame")
    NotifyFrame.Size = UDim2.new(0, 220, 0, 60)
    NotifyFrame.Position = UDim2.new(1, 30, 0.85, 0) -- EkranÄ±n dÄ±ÅŸÄ±ndan baÅŸla
    NotifyFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    NotifyFrame.BorderSizePixel = 0
    NotifyFrame.Parent = ScreenGui
    Instance.new("UICorner", NotifyFrame).CornerRadius = UDim.new(0, 10)
    
    local NStroke = Instance.new("UIStroke", NotifyFrame)
    NStroke.Color = Color3.fromRGB(255, 215, 0)
    NStroke.Thickness = 2
    
    local NTitle = Instance.new("TextLabel")
    NTitle.Size = UDim2.new(1, 0, 1, 0)
    NTitle.BackgroundTransparency = 1
    NTitle.Text = "âœ¨Yildiray Hub Premiumâœ¨"
    NTitle.TextColor3 = Color3.fromRGB(255, 215, 0)
    NTitle.TextSize = 16
    NTitle.Font = Enum.Font.GothamBold
    NTitle.Parent = NotifyFrame

    -- Kayarak Gelme
    NotifyFrame:TweenPosition(UDim2.new(0.98, -220, 0.85, 0), "Out", "Back", 0.6, true)
    
    -- 5 Saniye Sonra Kayarak Gitme
    task.delay(5, function()
        NotifyFrame:TweenPosition(UDim2.new(1, 30, 0.85, 0), "In", "Quad", 0.6, true, function()
            NotifyFrame:Destroy()
        end)
    end)
end

showNotification()

