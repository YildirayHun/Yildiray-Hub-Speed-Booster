Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 12)
local MainStroke = Instance.new("UIStroke", Main)
MainStroke.Color = Color3.fromRGB(255, 215, 0)
MainStroke.Thickness = 2

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 45)
Title.Text = "âš¡ YILDIRAY BOOSTER âš¡"
Title.TextColor3 = Color3.fromRGB(255, 215, 0)
Title.TextSize = 15
Title.Font = Enum.Font.GothamBold
Title.BackgroundTransparency = 1
Title.Parent = Main

local SpeedBox = Instance.new("TextBox")
SpeedBox.Size = UDim2.new(0, 180, 0, 30)
SpeedBox.Position = UDim2.new(0.5, -90, 0, 50)
SpeedBox.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
SpeedBox.Text = "50"
SpeedBox.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedBox.Font = Enum.Font.Gotham
SpeedBox.Parent = Main
Instance.new("UICorner", SpeedBox).CornerRadius = UDim.new(0, 6)

SpeedBox:GetPropertyChangedSignal("Text"):Connect(function()
    SPEED = tonumber(SpeedBox.Text) or 16
end)

-- TOGGLE YAPICI
local function createToggle(name, yPos, key)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 180, 0, 40)
    btn.Position = UDim2.new(0.5, -90, 0, yPos)
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    btn.Text = name .. " [" .. key .. "]: OFF"
    btn.TextColor3 = Color3.fromRGB(200, 200, 200)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 12
    btn.Parent = Main
    Instance.new("UICorner", btn)
    local bStroke = Instance.new("UIStroke", btn)
    bStroke.Color = Color3.fromRGB(60, 60, 60)

    local active = false
    local function update()
        bStroke.Color = active and Color3.fromRGB(255, 215, 0) or Color3.fromRGB(60, 60, 60)
        btn.TextColor3 = active and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(200, 200, 200)
        btn.Text = name .. " [" .. key .. "]: " .. (active and "ON" or "OFF")
    end

    return btn, function(state)
        if state ~= nil then active = state else active = not active end
        update()
        return active
    end
end

local SpeedBtn, updateSpeedState = createToggle("SPEED", 95, "R")
local JumpBtn, updateJumpState = createToggle("INF JUMP", 145, "F")

-- FONKSÄ°YONLAR
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.R then
        speedEnabled = updateSpeedState()
    elseif input.KeyCode == Enum.KeyCode.F then
        infJumpEnabled = updateJumpState()
    end
end)

SpeedBtn.MouseButton1Click:Connect(function() speedEnabled = updateSpeedState() end)
JumpBtn.MouseButton1Click:Connect(function() infJumpEnabled = updateJumpState() end)

RunService.Heartbeat:Connect(function()
    if speedEnabled then
        local char = player.Character
        local hrp = char and char:FindFirstChild("HumanoidRootPart")
        local hum = char and char:FindFirstChild("Humanoid")
        if hrp and hum and hum.MoveDirection.Magnitude > 0 then
            hrp.AssemblyLinearVelocity = Vector3.new(hum.MoveDirection.X * SPEED, hrp.AssemblyLinearVelocity.Y, hum.MoveDirection.Z * SPEED)
        end
    end
end)

UserInputService.JumpRequest:Connect(function()
    if infJumpEnabled then
        local char = player.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        local hrp = char and char:FindFirstChild("HumanoidRootPart")
        if hum and hrp then
            hrp.Velocity = Vector3.new(hrp.Velocity.X, jumpForce, hrp.Velocity.Z)
        end
    end
end)

